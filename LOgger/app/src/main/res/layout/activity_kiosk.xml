<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="32dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="32dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGGER KIOSK"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="#00FF00"
            android:gravity="center"
            android:fontFamily="monospace" />

        <TextView
            android:id="@+id/kioskStatusTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Initializing..."
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:fontFamily="monospace" />

    </LinearLayout>

    <!-- Log Display -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#111111"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SCAN LOGS"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#00FF00"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:fontFamily="monospace" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:padding="8dp">

            <TextView
                android:id="@+id/kioskLogTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No logs available"
                android:textSize="14sp"
                android:textColor="#00FF00"
                android:fontFamily="monospace"
                android:lineSpacingExtra="4dp" />

        </ScrollView>

    </LinearLayout>

    <!-- Footer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="32dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AUTO-MODE ACTIVE"
            android:textSize="16sp"
            android:textColor="#FFAA00"
            android:gravity="center"
            android:fontFamily="monospace" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service will auto-restart on failure"
            android:textSize="12sp"
            android:textColor="#888888"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:fontFamily="monospace" />

    </LinearLayout>

</LinearLayout> 